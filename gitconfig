[user]
    name = Sergei Orlov
    email = sorlov+github@gmail.com
[diff]
[color]
    ui = auto
[alias]
    aa = add --all
    amend = commit --amend
    br = branch
    ci = commit
    cma = commit -a -m
    co = checkout
    dc = diff --cached
    del = branch -d
    di = diff
    fixup = commit --amend -a --no-edit
    head = log -1
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    last = !git log -4 --format="%h.%cr.%s" | cat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log -p
    ls = ls-files
    po = pull origin
    pr = remote prune origin
    tidy = !git remote prune origin && git branch -r --merged master | grep -v 'master$' | grep origin | sed 's%origin/%%' | xargs -I% git push origin :% && git branch --merged master | grep -v 'master$' | xargs git branch -d
    unadd = reset head
    rim = rebase -i master
    s = status -s
[merge]
	tool = opendiff
[branch]
    autosetupmerge = true
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
